{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "outDir": "./dist",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop" : true,
    "allowSyntheticDefaultImports" : true,
    "baseUrl": ".",
    "paths": {
      "@Assets/*": ["src/assets/*"],
      "@Components/*": ["src/components/*"],
      "@Containers/*": ["src/containers/*"],
      "@Hooks/*": ["src/hooks/*"],
      "@Pages/*": ["src/pages/*"],
      "@Posts/*": ["src/posts/*"],
      "@Typings/*": ["src/typings/*"],
    },
  }
}